
@model Sneakers
<div class="col">
    <div class="card sneakers-card">
        <img src="@Model.ImageThumbnailURL" class="card-img-top" alt="@Model.Name">
        <div class="card-body sneakers-button">
            <h4 class="d-grid">
                <a class="btn btn-secondary" 
                   asp-controller="ShoppingCart" 
                   asp-action="AddToShoppingCart"
                   asp-route-SneakersId="@Model.SneakersId"> + Add to cart</a>
            </h4>
            
            <div class="d-flex justify-content-between mt-2">
                <h2 class="text-start">
                    <a asp-controller="Sneakers"
                       asp-action="Details"
                       asp-route-id="@Model.SneakersId"
                       class="sneakers-link">@Model.Name</a>
                </h2>
                 <h5 class="text-nowrap">
                    @Model.Price.ToString("c")
                </h5>
            </div>
        </div>
    </div>
</div>